<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectengular_field2"
    android:orientation="vertical"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    tools:context=".SessionItem">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginVertical="11.3dp"
        android:layout_marginRight="14dp"
        android:outlineSpotShadowColor="#11e1e2e4"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_school"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1.7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8.3dp"
                android:layout_marginRight="16dp"
                android:background="#efefef" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textColor="#c5c5c5"
                        android:textSize="11.7sp" />


                    <TextView
                        android:id="@+id/tv_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00 AM"
                        android:textColor="#4b4949"
                        android:textSize="13.3sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classroom"
                        android:textColor="#c5c5c5"
                        android:textSize="11.7sp" />

                    <TextView
                        android:id="@+id/tv_classroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4A"
                        android:textColor="#4b4949"
                        android:textSize="13.3sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End"
                        android:textColor="#c5c5c5"
                        android:textSize="11.7sp" />

                    <TextView
                        android:id="@+id/tv_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"
                        android:textColor="#4b4949"
                        android:textSize="13.3sp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.5"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Teacher"
                        android:textColor="#c5c5c5"
                        android:textSize="11.7sp" />

                    <TextView
                        android:id="@+id/tv_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Mark Jon"
                        android:textColor="#4b4949"
                        android:textSize="13.3sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center_horizontal"
                        android:text="Subject"
                        android:textColor="#c5c5c5"
                        android:textSize="11.7sp" />

                    <TextView
                        android:id="@+id/tv_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Business"
                        android:textColor="#4b4949"
                        android:textSize="13.3sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:paddingLeft="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1dp"
                        android:text="Group"
                        android:textColor="#c5c5c5"
                        android:textSize="11.7sp" />

                    <TextView
                        android:id="@+id/tv_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1dp"
                        android:text="INDP2-F"
                        android:textColor="#4b4949"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Presential"
                        android:textColor="#c5c5c5"
                        android:textSize="11.7sp" />

                    <TextView
                        android:id="@+id/tv_presential"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textColor="#4b4949"
                        android:textSize="13.3sp" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_qrc"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.4"
                    android:paddingLeft="2dp"
                    app:srcCompat="@drawable/ic_qrcode" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>